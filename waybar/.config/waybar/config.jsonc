{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------

    "layer": "bottom",
    "position": "top",

    "height": 30,

    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "cpu",
        "memory",
        "temperature",
        "custom/storage",
        "pulseaudio"
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "custom/spotify",
        "custom/weather",
        "backlight",
        "network",
        "battery",
        "clock#BS",
        "clock",
        "tray",
        "idle_inhibitor"
    ],

    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------

    "sway/mode": {
        "format": "ï”ï„… {}"
    },
    "sway/workspaces": {
        "format": "{name}",
        "disable-scroll": true
    },
    "sway/window": {
        "max-length": 80,
        "tooltip": false
    },
    "clock": {
        "format": "{:%a %d %b %H:%M:%OS}",
        "tooltip": true,
        "tooltip-format": "<big>{:%B %Y}</big>\n<tt>{calendar}</tt>",
        "interval": 1
    },
    "clock#BS": {
        "format": "Arg {:%H:%M}",
        "tooltip": false,
        "timezone": "America/Argentina/Buenos_Aires",
        "interval": 1
    },
    "temperature": {
        // "thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}Â°C ï‹‡",
        "format": "{temperatureC}Â°C ï‹‰",
        "interval": 5,
        "tooltip": true,
        "on-click": "swaymsg exec \"\\$term_float 'watch sensors'\""
    },
    "cpu": {
        "format": "{usage}% ï‹›",
        "interval": 5,
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    "memory": {
        "format": "{}% ïƒ‰",
        "interval": 5,
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    "battery": {
        "interval": 30,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% ï—§",
        "format-plugged": "{capacity}% ï‡¦",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) ï‡«",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} ï–",
        "format-linked": "{ifname} (No IP) ï–",
        "format-disconnected": "Disconnected âš ",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "termite -e nmtui",
        "tooltip": false
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}ïŠ” {format_source}",
        "format-bluetooth-muted": "ïš© {icon}ïŠ” {format_source}",
        "format-muted": "ïš© {format_source}",
        "format-source": "{volume}% ï„°",
        "format-source-muted": "ï„±",
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ï–",
            "headset": "ï–",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "on-click": "pavucontrol"
    },
    "custom/spotify": {
        "interval": 1,
        "return-type": "json",
        "exec": "~/.config/waybar/modules/spotify.sh",
        "exec-if": "pgrep spotify",
        "escape": true
    },
    "custom/storage": {
        "format": "{} ï‚ ",
        "format-alt": "{percentage}% ï‚ ",
        "format-alt-click": "click-right",
        "return-type": "json",
        "interval": 60,
        "exec": "~/.config/waybar/modules/storage.sh"
    },
    "custom/weather": {
	"interval": 1800,
	"exec": "curl 'https://wttr.in/Alboraia?format=1'",
	"max-length": 10
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{percent}% {icon}",
        "format-icons": ["ğŸŒ•", "ğŸŒ”", "ğŸŒ“", "ğŸŒ’", "ğŸŒ‘"],
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "deactivated": "ï",
            "activated": "ï€£"
        },
        "tooltip": false
    },
    "tray": {
	//"icon-size": 21,
	"spacing": 10
    }
}


